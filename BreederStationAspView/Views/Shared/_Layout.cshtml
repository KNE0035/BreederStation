<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

@{
    var user = Session["user"] as BreederStationAspView.Models.User;
}

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @if (user != null)
            {
                <nav>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li>@Html.ActionLink("Úvod", "Index", "Home")</li>
                            @if (user.Role == BreederStationBussinessLayer.Domain.Enums.RoleEnum.ADMIN || user.Role == BreederStationBussinessLayer.Domain.Enums.RoleEnum.ADMIN)
                            {
                                <li>
                                    @Html.ActionLink("Zaměstnanci", "PersonList", "Person")
                                <ul class="personSubMenu">
                                    <li>@Html.ActionLink("Evidence zaměstnanců", "PersonList", "Person")</li>
                                    <li>@Html.ActionLink("Přidat zaměstance", "AddPersonForm", "Person")</li>
                                </ul>
                            </li>
                            }
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                        </ul>
                    </div>
                </nav>
            }
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Breeder Station</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

@{
    ViewBag.Title = "Login";
}
<div id="LoginForm">
    <h2>Login</h2>
    @using (Html.BeginForm())
    {
        <div>@Html.Label("Login")</div>
        <div>@Html.TextBox("Login")</div>
        <div>@Html.Label("Password")</div>
        <div>@Html.Password("Password")</div>
        <input type="submit" value="Login" />
    }
</div>
